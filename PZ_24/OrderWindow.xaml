<Window x:Class="ConstructionCompanyApp.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Order" Height="300" Width="400">
    <Grid>
        <Label Content="Customer Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="CustomerNameTextBox" HorizontalAlignment="Left" Height="23" Margin="110,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <Label Content="Order Date" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <DatePicker Name="OrderDatePicker" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,40,0,0"/>
        <Label Content="Description" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBox Name="DescriptionTextBox" HorizontalAlignment="Left" Height="100" Margin="110,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <Button Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,180,0,0" Click="SaveOrder_Click"/>
    </Grid>
</Window>
