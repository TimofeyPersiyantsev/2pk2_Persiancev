<Window x:Class="PZ_22.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PZ_22"
        mc:Ignorable="d"
        Title="Construction Company" Height="450" Width="800">
    <Grid>
        <Button Content="Add Order" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10" Click="AddOrder_Click"/>
        <Button Content="Add Project" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="120,10,0,0" Click="AddProject_Click"/>
        <ListBox Name="OrdersListBox" HorizontalAlignment="Left" Height="300" Margin="10,50,0,0" VerticalAlignment="Top" Width="360"/>
        <ListBox Name="ProjectsListBox" HorizontalAlignment="Left" Height="300" Margin="400,50,0,0" VerticalAlignment="Top" Width="360"/>
    </Grid>
</Window>
