<Window x:Class="PZ_22.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PZ_22"
        mc:Ignorable="d"
         Title="Text Editor" Height="350" Width="525">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Сохранить">
                <MenuItem Header="New" Click="NewFile_Click"/>
                <MenuItem Header="Open" Click="OpenFile_Click"/>
                <MenuItem Header="Save" Click="SaveFile_Click"/>
                <Separator />
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
        </Menu>
        <TextBox Name="TextBoxEditor" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,25,0,0" AcceptsReturn="True" TextWrapping="Wrap" Text=""/>
    </Grid>
</Window>
